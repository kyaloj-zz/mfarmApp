<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.fragments.justus.mfarmapp" >
    <uses-permission android:name="ANDROID.PERMISSION.INTERNET"/>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.AppCompat.Light.DarkActionBar"
        android:supportsRtl="true" >
        <activity
            android:name=".SplashScreen"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".InfoPage"
            android:label="@string/title_activity_info_page" >
        </activity>
        <activity
            android:name=".LoginPage"
            android:label="@string/title_activity_login_page" >
        </activity>
        <activity
            android:name=".NavigationDrawer"
            android:theme="@style/KitkatStatusBar"
            android:label="@string/title_activity_navigation_drawer" >
        </activity>

        <activity android:name=".mockedActivity.Settings" />
        <activity android:name=".mockedActivity.Profile" />

        <activity
            android:name=".Trends"
            android:label="@string/title_activity_trends" >
        </activity>
    </application>

</manifest>
